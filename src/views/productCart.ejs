        <article class="categories-product">        
            <% products.forEach(zapatilla => { %>
                <div class="products">
                    <p><%- zapatilla.name%> </p>
                    <img class="product-image" src="/images/products/<%- zapatilla.subcategory%>/<%- zapatilla.image%>" alt="<%- zapatilla.id%> ">
                    <p>Descripcion: <%- zapatilla.description%> </p>
                    <p>Talle:
                        <% zapatilla.sizes.forEach(talle => { %>
                            <%- talle.num %> 
                            <% }) %>
                    </p>
                    <p>Color:
                        <% zapatilla.colors.forEach(color => { %>
                            <%- color.name %> 
                            <% }) %>
                        </p>    
                    <p>Precio: <%- zapatilla.price%> </p>
                    
                </div>
                <p>Total: <% let total = zapatilla.price++ %> </p>
                <% }) %>
        </article>
